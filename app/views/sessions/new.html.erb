<% provide(:title, "ログイン") %>

<div class="flex flex-col mb-32">
  <div class="max-w-screen-xl mx-auto mt-8">
    <h1 class="text-7xl mt-20 mb-20">ー ログイン ー</h1>
    <div class="flex flex-col justify-center items-center">

      <% flash.each do |type, message| %>
        <div class="<%= type %>">
        <%= message %>
        </div>
      <% end %>

      <%= form_with(url: login_path, scope: :session) do |f| %>

        <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "block mb-1" %>
          <%= f.email_field :email, class: "border rounded px-4 py-2 w-64" %>
        </div>

        
        <div class="mb-4">
          <%= f.label :password, "パスワード", class: "block mb-1" %>
          <%= f.password_field :password, class: "border rounded px-4 py-2 w-64" %>
        </div>

        <div class="mb-4">
        <%= f.submit "ログイン", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors" %>
        </div>

        <%= link_to "新規の方はこちらへ", "signup", class: "border-b" %>
      <% end %>
    </div>
  </div>
</div>
