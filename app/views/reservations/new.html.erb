<% provide(title: "新規予約") %>

<div class="flex flex-col mb-32">
  <div class="max-w-screen-xl mx-auto mt-8">
      <h1 id="mypage-title" class="text-7xl mt-20 mb-20">ー 新規予約 ー</h1>

    <div class="flex flex-col justify-center items-center">

      <%= form_with model: @reservation, local: true, class: 'form' do |form| %>
        <div class="day mb-4">
          <%= form.label :day, '日付', class: 'font-bold mb-10' %>
          <%= form.text_field :day, class: 'form-input mt-1 block w-full', value: @day, readonly: true %>
        </div>
        <div class="time mb-4">
          <%= form.label :time, '時間', class: 'font-bold' %>
          <%= form.text_field :time, class: 'form-input mt-1 block w-full', value: @time, readonly: true %>
        </div>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :start_time, value: @start_time %>
        <div class="submit mb-4">
          <%= form.submit value: '予約する', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
      <% end %>
      <div class="text-right">
        <%= link_to '戻る', reservations_path, class: 'text-blue-500 hover:text-blue-700 font-bold' %>
      </div>
    </div>
  </div>
</div>
